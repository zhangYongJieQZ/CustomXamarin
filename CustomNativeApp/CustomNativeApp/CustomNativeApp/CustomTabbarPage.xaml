<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CustomNativeApp.CustomTabbarPage">
    <ContentPage.Content>
        <RelativeLayout>
            <ScrollView BackgroundColor="Red" x:Name="redBox" IsVisible="true"
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=1,Constant=-64}"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"
                     RelativeLayout.XConstraint="{ConstraintExpression Type=Constant,Factor=1,Constant=0}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=0,Constant=44}" >
            </ScrollView>
            <BoxView BackgroundColor="Silver" IsVisible="true">
                
            </BoxView>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>
